# Cornerstone Backend Configuration
# Copy this file to .env and fill in your actual values

# ===== 数据库配置 =====
# PostgreSQL connection URL
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cornerstone?sslmode=disable

# 数据库连接池配置
DB_MAX_OPEN=10
DB_MAX_IDLE=5
DB_MAX_LIFETIME=3600

# ===== 服务器配置 =====
# 服务器模式: debug 或 release
SERVER_MODE=debug

# 服务器端口
PORT=8080

# ===== 日志配置 =====
# 日志级别: debug, info, warn, error, fatal
LOG_LEVEL=info

# 应用日志输出路径
LOG_OUTPUT=logs/app.log

# 错误日志输出路径
LOG_ERROR=logs/error.log

# 日志文件最大大小(MB)
LOG_MAX_SIZE=100

# 日志文件保留天数
LOG_MAX_AGE=7

# 日志文件保留数量
LOG_MAX_BACKUPS=5

# ===== JWT配置 =====
# JWT密钥 (生产环境必须修改为复杂密钥)
JWT_SECRET=your-secret-key-here-change-in-production

# JWT过期时间(小时)
JWT_EXPIRATION=24

# ===== 开发环境配置 =====
# 是否启用调试模式
DEBUG=true

# CORS配置 (开发环境)
CORS_ORIGIN=*

# ===== 生产环境建议 =====
# 生产环境请使用以下配置:
# SERVER_MODE=release
# JWT_SECRET=<生成复杂密钥>
# DATABASE_URL=postgres://user:password@host:port/dbname?sslmode=require
# LOG_LEVEL=warn